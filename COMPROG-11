#include <stdio.h>
#include <conio.h>
#include <stdbool.h>
#define PI 3.14

bool getDragon();
int getInput();
int getNum();

int main ()
{
	int x, y;
	int num1, num2;
	double sum = 0;
	do
	{
		printf("\n Pick a Choice \n");
		printf("1. PRELIM ACTIVITIES\n");
		printf("2. MIDTERM ACTIVITIES\n");
		printf("3. SEMIFINALS ACTIVITIES\n");
		printf("4. FINALS ACTIVITIES\n");
		printf("0. to stop the program\n");
		printf("Choice: ");
		x = getInput();
		switch (x)
		{
		case 1:
			do
			{
				printf("\n Pick a Choice \n");
				printf("1. PRELIM ACTIVITIES\n");
				printf("2. MIDTERM ACTIVITIES\n");
				printf("3. SEMIFINALS ACTIVITIES\n");
				printf("0. to stop the program\n");
				num1 = getNum();
				sum = PI * num1 * num1;
				printf("The Area of Circle is: %.2lf", sum);
				y = getDragon();
			}
			while (y == 0);
			break;
		case 2:
			do
			{
				printf("Enter the Base: ");
				num1 = getNum();
				printf("Enter the Height: ");
				num2 = getNum();
				sum = 0.5 * num1 * num2;
				printf("Result: %.2lf", sum);
				y = getDragon();
			}
			while (y == 0);
			break;
		case 3:
			do
			{
				printf("Enter the Length: ");
				num1 = getNum();
				printf("Enter the Width: ");
				num2 = getNum();
				sum = num1 * num2;
				printf("Result: %.2lf", sum);
				y = getDragon();
			}
			while (y == 0);
			break;
		case 4:
			do
			{
				printf("Enter the Length: ");
				num1 = getNum();
				printf("Enter the Width: ");
				num2 = getNum();
				sum = num1 * num2;
				printf("Result: %.2lf", sum);
				y = getDragon();
			}
			while (y == 0);
			break;
		case 0:
			return 0;
		}
	}
	while (y == 1);
	return 0;
}
int getInput()
{
	int choice;
	scanf("%d", &choice);
	return choice;
}
bool getDragon()
{
	printf("\nEnter 0 to Continue and 1 to Exit: ");
	if (getInput() == 1)
	{
		return 1;
	}
	else
	{
		return 0;
	}
}

int getNum(){
	int num;
	scanf("%d", &num);
	return num;

}

ACTIVITY 2
#include <stdio.h>
#include <conio.h>

int main() 
{
    float width, length, perimeter;

    printf("Enter the base of the rectangle: ");
    scanf("%f", &length);

    printf("Enter the height of the rectangle: ");
    scanf("%f", &width);

    perimeter = (length + width) * 2;

    printf("The perimeter of the rectangle is: %.2f\n", perimeter);

    return 0;
}

ACTIVITY 3:
#include <stdio.h>

int main() 
{
    int s1, s2, s3, s4, s5;
	float average;

    printf("Enter first score: ");
    scanf("%d", &s1);

    printf("Enter second score: ");
    scanf("%d", &s2);
	
	printf("Enter third score: ");
    scanf("%d", &s3);
	
	printf("Enter fourth score: ");
    scanf("%d", &s4);
	
	printf("Enter fifth score: ");
    scanf("%d", &s5);
	
    average = (float) (s1+s2+s3+s4+s5) / 5;

    printf("the average score is: %.2f", average);

    return 0;
}

