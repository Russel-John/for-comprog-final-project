#include <stdio.h>
#include <conio.h>

int getInput(float km);
int convert(float km, float miles);
void displayOutput(float km, float miles);

int main(void){

	int km = getInput(km);
	int miles = convert(km, miles);
	displayOutput(km, miles);
	return 0;
	}
	
int getInput(float km){
	float kilometer;
	
	printf("Enter a number to be converted: ");
	scanf("%f", &kilometer);
	}
	
int convert(float km, float miles){
	miles = km / 1.6;
	}

void displayOutput(float km, float miles){
	
	printf("%.2f km = %.2f miles", km, miles);
	}
		
