HANDS ON NO.2
#include <stdio.h>

int getInput();
float getValue();

int main(){

double result = getValue();
printf("\nOUTPUT:%.2lf", result);	 
	return 0;
}

int getInput(){
	
	int num1;
	printf("Enter a Number", num1);	  
	scanf("%d",&num1);
}

float getValue(){
	int total = 0;
	int count = 0;
	
		while(1){
		int value = getInput();
		
			if(value == 0){
			break;
			}
			else if(value < 0){
			return (float)value;
		}
		total += value;
		count += 1;
		}
		if(count > 0) {
		return (float) total/count;
		}
		else{
			return 0;
		}
		return ;
}

