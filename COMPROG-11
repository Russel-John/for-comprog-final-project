#include<stdio.h>
#include<math.h>

int main()
{

int price, quantity, total, discount_is_5, discount_is_10;
printf("Enter the price\n");
scanf("%d", &price);
printf("Enter the quantity\n");
scanf("%d", &quantity);
total=(quantity*price);
discount_is_5=(total-total*0.05);
discount_is_10=(total-total*0.1);

if(total>=3000){
printf("Your total price is %d so your dicounted total price is %d ",total, discount_is_10);
}
else if(total>=1000){
printf("Your total is %d so your discounted total price is %d ",total, discount_is_5);
}
else{

printf("You your total is %d so your discount is 0 ",total);
}

return 0;
}

